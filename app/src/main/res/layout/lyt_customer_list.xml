<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_shadow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgUser"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:contentDescription="TODO" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardActiveStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:cardCornerRadius="5dp">

                <TextView
                    android:id="@+id/tvActiveStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_lyt_item"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tvName"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@color/light_gray" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_lyt_item"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_lty_price"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tvEmail"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@color/light_gray" />


            <TextView
                android:id="@+id/tvMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_lty_price"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_lyt_qty"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tvMobile"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@color/light_gray" />

            <TextView
                android:id="@+id/tvWalletBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_lyt_qty"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>